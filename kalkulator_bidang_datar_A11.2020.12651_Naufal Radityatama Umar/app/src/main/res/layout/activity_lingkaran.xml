<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck1"
    tools:context=".Lingkaran">

    <EditText
        android:id="@+id/jari2"
        android:layout_width="190dp"
        android:layout_height="73dp"
        android:layout_marginTop="48dp"
        android:hint="Jari-jari"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/keliling_ligkaran"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.415" />

    <Button
        android:id="@+id/button_lingkaran"
        android:layout_width="231dp"
        android:layout_height="91dp"
        android:layout_marginBottom="248dp"
        android:text="Hitung"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/luas_lingkaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:hint="Luas Lingkaran"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button_lingkaran"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/keliling_ligkaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:hint="Keliling Lingkaran"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/luas_lingkaran"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>