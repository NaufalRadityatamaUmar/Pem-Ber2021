<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck1"
    tools:context=".Segitiga">

    <EditText
        android:id="@+id/segitiga_alas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Alas"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/segitiga_tinggi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/segitiga_tinggi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:hint="Tinggi"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/segitiga_sisi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/segitiga_sisi"
        android:layout_width="101dp"
        android:layout_height="41dp"
        android:layout_marginBottom="60dp"
        android:hint="Sisi"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/luas_segitiga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/segitiga_button"
        android:layout_width="262dp"
        android:layout_height="102dp"
        android:layout_marginBottom="168dp"
        android:text="Hitung"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/luas_segitiga"
        android:layout_width="146dp"
        android:layout_height="39dp"
        android:layout_marginBottom="35dp"
        android:hint="Luas Segitiga"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/keliling_segitiga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/keliling_segitiga"
        android:layout_width="187dp"
        android:layout_height="34dp"
        android:hint="Keliling Segitiga"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/segitiga_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>