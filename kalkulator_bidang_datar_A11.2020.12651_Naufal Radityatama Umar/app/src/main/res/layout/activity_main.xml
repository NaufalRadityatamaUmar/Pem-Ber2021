<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bck1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="69dp"
        android:text="Welcome to My Calculator"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/segitiga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/persegi"
        android:layout_width="143dp"
        android:layout_height="0dp"
        android:layout_marginBottom="59dp"
        android:text="Persegi"
        app:layout_constraintBottom_toTopOf="@+id/lingkaran"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/segitiga" />

    <Button
        android:id="@+id/lingkaran"
        android:layout_width="161dp"
        android:layout_height="0dp"
        android:layout_marginBottom="156dp"
        android:text="Lingkaran"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/persegi" />

    <Button
        android:id="@+id/segitiga"
        android:layout_width="142dp"
        android:layout_height="0dp"
        android:layout_marginBottom="52dp"
        android:text="Segitiga"
        app:layout_constraintBottom_toTopOf="@+id/persegi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>